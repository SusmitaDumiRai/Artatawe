<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #DCDCDC;" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.uk.artatawe.controller.CustomProfileImagePageController">
   <center>
      <Pane fx:id="canvasPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <Rectangle fx:id="canvasBackgroundColour" arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="400.0" stroke="BLACK" strokeType="INSIDE" width="400.0" />
            <Canvas fx:id="canvas" height="400.0" onMouseDragged="#onCanvasMouseDragged" onMousePressed="#onCanvasMousePressed" onMouseReleased="#onCanvasMouseReleased" width="400.0" />
         </children>
      </Pane>
   </center>
   <right>
      <VBox fx:id="options" prefHeight="200.0" prefWidth="150.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="optionsTitle" alignment="CENTER" contentDisplay="CENTER" text="Draw:" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Label>
            <RadioButton fx:id="selectStraightLine" mnemonicParsing="false" text="Straight Line">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <toggleGroup>
                  <ToggleGroup fx:id="optionsToggleGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="selectParticleTrace" mnemonicParsing="false" text="Particle Trace" toggleGroup="$optionsToggleGroup">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </RadioButton>
         </children>
         <BorderPane.margin>
            <Insets top="70.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <top>
      <Label fx:id="title" text="Draw a custom profile image!" BorderPane.alignment="CENTER_LEFT">
         <font>
            <Font size="24.0" />
         </font>
         <padding>
            <Insets left="170.0" top="20.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </Label>
   </top>
   <bottom>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="70.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="back" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Back" GridPane.halignment="CENTER" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Button>
            <Button fx:id="saveImage" mnemonicParsing="false" onAction="#onSaveImageAction" prefHeight="40.0" prefWidth="120.0" text="Save Image" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="TOP" />
         </children>
      </GridPane>
   </bottom>
</BorderPane>
